[maxscale]
threads=8
syslog=0
maxlog=1
logdir=/mnt/ssd-raid0/maxscale/workdir
datadir=/mnt/ssd-raid0/maxscale/workdir
cachedir=/mnt/ssd-raid0/maxscale/workdir
piddir=/mnt/ssd-raid0/maxscale/workdir

[server1]
type=server
address=cheetah02
port=33061
protocol=MySQLBackend

[server2]
type=server
address=cheetah02
port=33062
protocol=MySQLBackend

[server3]
type=server
address=cheetah02
port=33063
protocol=MySQLBackend

[server4]
type=server
address=cheetah02
port=33064
protocol=MySQLBackend

[MySQL Monitor]
type=monitor
module=mysqlmon
servers=server1,server2,server3,server4
user=monitor
passwd=99A8680CC46CF615FE9D935787DE7970
monitor_interval=10000

[ro]
type=service
router=readconnroute
servers=server1,server2,server3,server4
user=monitor
passwd=99A8680CC46CF615FE9D935787DE7970
router_options=running

[admin]
type=service
router=cli

[RO Listener]
type=listener
service=ro
protocol=MySQLClient
address=127.0.0.1
port=4008

[Admin Listener]
type=listener
service=admin
protocol=maxscaled
address=127.0.0.1
port=6603

[rw]
type=service
router=readwritesplit
servers=server1,server2,server3,server4
user=monitor
passwd=99A8680CC46CF615FE9D935787DE7970
slave_selection_criteria=LEAST_ROUTER_CONNECTIONS
max_slave_connections=1

[RW Listener]
type=listener
service=rw
protocol=MySQLClient
address=127.0.0.1
port=4009

